<?xml version="1.0" encoding="utf-8"?>
<base:PageBase
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:WeekPlanner.Views.Base;assembly=WeekPlanner"
    x:Class="WeekPlanner.Views.TestingPage"
    Title="Navigering">
    <ContentPage.Content>
        <ContentView ControlTemplate="{StaticResource NavBarTheme}">
            <StackLayout VerticalOptions="Center">
                <Button
                    Text="Log ind"
                    Command="{Binding NavigateToLoginCommand}"  />
                <Button
                    Text="Vælg borger"
                    Command="{Binding NavigateToChooseCitizenCommand}" />
                <Button
                    Text="Ugeplan"
                    Command="{Binding NavigateToWeekPlannerCommand}" />
                <Button
                    Text="Vælg skabelon"
                    Command="{Binding NavigateToChooseTemplateCommand}" />
                <Button
                    Text="Søg efter pictogram"
                    Command="{Binding NavigateToPictogramSearchCommand}" />
                <Button 
                    Text="Aktivitet" 
                    Command="{Binding NavigateToActivityCommand}" />
                <Button
                    Text="Indstillinger"
                    Command="{Binding NavigateToSettingsCommand}" />
            </StackLayout>
        </ContentView>
    </ContentPage.Content>
</base:PageBase>
